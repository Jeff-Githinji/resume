<!DOCTYPE html>
<html>
<head>
  <title>USIU-Africa Attendance</title>
  <style>
    h1 {
    color: #333;
    border-bottom: 2px solid #ddd;
    padding-bottom: 10px;
    margin-top: 20px;
  }

  .student-list {
    list-style-type: none;
    padding: 0;
    margin-top: 20px;
  }

  .student-item {
    margin-bottom: 10px;
    border: 1px solid #ccc;
    padding: 10px;
    border-radius: 4px;
  }

  .action-link {
    margin-right: 10px;
    text-decoration: none;
    color: #007BFF;
  }

  .action-link:hover {
    text-decoration: underline;
  }

  .btn {
    background-color: #007BFF;
    color: #fff;
    padding: 10px 20px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 16px;
    margin-top: 20px;
    text-decoration: none;
    display: inline-block;
  }

  .btn:hover {
    background-color: #0056b3;
  }
  body{
      font-family: 'Montserrat', sans-serif;

  }
  </style>
</head>
<body>
  <h1>USIU-Africa Attendance</h1>
  <h3>Students: </h3>
  <ul class="student-list">
    {{#each students}}
      <li class="student-item">
        {{this.name}} - 
        <a href="/edit-attendance/{{this.studentId}}" class="action-link">Edit Attendance</a> | 
        <a href="/view-attendance/{{this.studentId}}" class="action-link">View Attendance</a> |
        <a href="/edit-student/{{this.studentId}}" class="action-link">Edit</a> | 
        <a href="/delete-student/{{this.studentId}}" class="action-link" onclick="confirmDelete('{{this.studentId}}')">Delete</a>
      </li>
    {{/each}}
  </ul>
  <a href="/add-student" class="btn">Add Student</a>
  <button onclick="createAttendance()" class="btn">Create Attendance</button>

  <script>
    function createAttendance() {
      const sessionId = prompt('Enter Session ID:');
      if (sessionId) {
        window.location.href = `/create-attendance/${sessionId}`;
      }
    }
    
    function confirmDelete(studentId) {
    // Prevent the default behavior of the anchor tag
    event.preventDefault();
    console.log("Delete button clicked for student ID:", studentId);
    // Redirect to the delete route with the studentId parameter
    window.location.href = "/delete-student/" + studentId;
}
  
  </script>
</body>
</html>
